# ============================================
# WalletConnect Configuration
# ============================================
# Get your Project ID from https://cloud.walletconnect.com
# Required for wallet connections
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# ============================================
# BuenoToken Contract Configuration
# ============================================
# Contract address for BuenoToken (used in /contract page)
# Deploy your contract and set this address
# Example: 0xCFA45ECA955dd195b5b5Fc0E40d1A1B06f16793C
NEXT_PUBLIC_BUENO_TOKEN_ADDRESS=

# ============================================
# Uniswap v4 Configuration
# ============================================
# BuenaToken address for Uniswap integration (note: different spelling from BUENO_TOKEN)
# Example: 0xe9689CF0Ffe9e4c6E9955f287a91697d18Ae7676
NEXT_PUBLIC_BUENA_TOKEN_ADDRESS=

# CELO Token address (native token on Celo)
NEXT_PUBLIC_CELO_TOKEN_ADDRESS=0x471EcE3750Da237f93B8E339c536989b8978a438

# Uniswap v4 Pool Manager contract
NEXT_PUBLIC_POOL_MANAGER_ADDRESS=0x288dc841A52FCA2707c6947B3A777c5E56cd87BC

# State View contract for pool information
NEXT_PUBLIC_STATE_VIEW_ADDRESS=0xbc21f8720babf4b20d195ee5c6e99c52b76f2bfb

# Universal Router for executing swaps
NEXT_PUBLIC_UNIVERSAL_ROUTER_ADDRESS=0xcb695bc5d3aa22cad1e6df07801b061a05a0233a

# Quoter contract for getting swap quotes
NEXT_PUBLIC_QUOTER_ADDRESS=0x28566da1093609182dff2cb2a91cfd72e61d66cd

# Permit2 contract for token approvals
NEXT_PUBLIC_PERMIT2_ADDRESS=0x000000000022D473030F116dDEE9F6B43aC78BA3

# Pool Configuration
NEXT_PUBLIC_POOL_ID=98
NEXT_PUBLIC_POOL_FEE_TIER=3000
NEXT_PUBLIC_POOL_TICK_SPACING=60

# Hooks address (default: zero address for no hooks)
NEXT_PUBLIC_HOOKS_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================
# The Graph Subgraph Configuration
# ============================================
# Subgraph API URL from Subgraph Studio
# Get this from: https://thegraph.com/studio/
# Format: https://api.studio.thegraph.com/query/<ACCOUNT_ID>/<SUBGRAPH_NAME>/version/latest
NEXT_PUBLIC_SUBGRAPH_URL=

# Optional: API Key for The Graph (for production with higher rate limits)
# Get this from your Subgraph Studio dashboard
NEXT_PUBLIC_GRAPH_API_KEY=

# ============================================
# Self Protocol Configuration
# ============================================
NEXT_PUBLIC_SELF_APP_NAME=ZeroToDapp
NEXT_PUBLIC_SELF_SCOPE=zero2dapp-verification

# Optional: Self Protocol API endpoint for verification
NEXT_PUBLIC_SELF_API_URL=https://api.self.xyz